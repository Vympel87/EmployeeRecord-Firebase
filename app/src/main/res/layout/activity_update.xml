<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#94a3b8"
    tools:context=".UpdateActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="350dp"
            android:layout_height="620dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/add_title"
                android:text="Update Employee"
                android:textSize="24dp"
                android:fontFamily="@font/poppins_bold"
                android:layout_marginVertical="24dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:id="@+id/update_firstname"
                android:hint="First Name"
                android:padding="12dp"
                android:textSize="12dp"
                android:fontFamily="@font/poppins_medium"
                android:maxLines="1"
                android:layout_marginTop="24dp"
                android:layout_marginHorizontal="24dp"
                android:background="@drawable/textfield_border"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/add_title"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:id="@+id/update_lasttname"
                android:hint="Last Name"
                android:padding="12dp"
                android:textSize="12dp"
                android:fontFamily="@font/poppins_medium"
                android:maxLines="1"
                android:layout_marginTop="24dp"
                android:layout_marginHorizontal="24dp"
                android:background="@drawable/textfield_border"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/update_firstname"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:id="@+id/update_age"
                android:hint="Age"
                android:padding="12dp"
                android:textSize="12dp"
                android:fontFamily="@font/poppins_medium"
                android:maxLines="1"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                android:layout_marginHorizontal="24dp"
                android:background="@drawable/textfield_border"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/update_lasttname"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:id="@+id/update_email"
                android:hint="Email"
                android:padding="12dp"
                android:textSize="12dp"
                android:fontFamily="@font/poppins_medium"
                android:maxLines="1"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                android:layout_marginHorizontal="24dp"
                android:background="@drawable/textfield_border"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/update_age"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:id="@+id/update_phonenumber"
                android:hint="Phone Number"
                android:padding="12dp"
                android:textSize="12dp"
                android:fontFamily="@font/poppins_medium"
                android:maxLines="1"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                android:layout_marginHorizontal="24dp"
                android:background="@drawable/textfield_border"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/update_email"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:id="@+id/update_address"
                android:hint="Address"
                android:padding="12dp"
                android:textSize="12dp"
                android:fontFamily="@font/poppins_medium"
                android:maxLines="1"
                android:layout_marginTop="24dp"
                android:layout_marginHorizontal="24dp"
                android:background="@drawable/textfield_border"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/update_phonenumber"/>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="240dp"
                android:layout_height="50dp"
                android:background="@drawable/custom_button"
                android:id="@+id/btn_update"
                android:textAllCaps="false"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins_semibold"
                android:text="Update"
                android:layout_marginTop="30dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/update_address"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
